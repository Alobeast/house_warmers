<h1>See all flats here</h1>
<p>Find me in app/views/flats/index.html.erb</p>
<ul>
 <% @flats.each do |flat| %>
  <li>
  <%= flat.address %>
  <%= flat.bedrooms %>
  <%= flat.rental_price %>
  <%= flat.size %>
  <%= flat.bedrooms %>
  <%= flat.rating %>
  <% if @flats.empty? %>
  <h2> No flats available </h2>
  <% end %>

  </li>
<% end %>

<div
  id="map"
  style="width: 50%;
  height: 450px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
